#!/bin/sh

DEVICE_ID=12

on() {
   xinput enable $DEVICE_ID
}

off(){
    xinput disable $DEVICE_ID
}

status(){
    STATUS_MESSAGE=$(xinput list-props $DEVICE_ID | grep Enable)
    STATUS=$(echo $STATUS_MESSAGE | rev | cut -c 1 | rev )
    echo $STATUS_MESSAGE
}

case "$1" in
    on)
        on
        ;;
    off)
        off
        ;;
    toggle)
        status
        if [ $STATUS = 0 ];then
            echo "touchpad on"
            on
        elif [ $STATUS = 1 ];then
            echo "touchpad off"
            off
        else
            exit 2
        fi
        ;;
    status)
        status
        ;;
    temp)
        on
        sleep 5;
        off
        ;;
    *)
        echo "Usage: $0 {on|off|toggle|status|temp}"
        exit 2
esac

exit 0
